<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Piringkosfix" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.Piringkosfix" parent="Base.Theme.Piringkosfix" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LittleTextViewStyle">
        <item name="android:textColor">#424242</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:background">@drawable/card_back_btn</item>
    </style>

    <style name="BackBtnViewStyle">
        <item name="android:tint">@color/black</item>
        <item name="android:src">@drawable/back_icon</item>
        <item name="android:background">@drawable/card_back_btn</item>
    </style>

    <style name="FullSizeViewStyle">
        <item name="android:tint">@color/black</item>
        <item name="android:background">@drawable/card_back_btn</item>
    </style>

    <style name="RecipeCardViewStyle">
        <item name="android:background">@drawable/card_recipe</item>
    </style>

    <style name="UpBtnViewStyle">
        <item name="android:tint">@color/black</item>
        <item name="android:src">@drawable/scroll_up</item>
    </style>

    <style name="CategoryCardViewStyle">
        <item name="android:background">@drawable/card_shape</item>
    </style>

    <style name="BottomSheetViewStyle">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="IconThemeViewStyle">
        <item name="android:tint">@color/black</item>
    </style>
</resources>